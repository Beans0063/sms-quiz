<html>
	<head>
		<title>Sales SMS Survey</title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		<!--[if lte IE 8]><script src="css/ie/html5shiv.js"></script><![endif]-->
		<script src="js/jquery.min.js"></script>
		<script src="js/jquery.dropotron.min.js"></script>
		<script src="js/skel.min.js"></script>
		<script src="js/skel-layers.min.js"></script>
		<script src="js/init.js"></script>
		<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
		<noscript>
			<link rel="stylesheet" href="css/skel.css" />
			<link rel="stylesheet" href="css/style.css" />
			<link rel="stylesheet" href="css/style-desktop.css" />
		</noscript>
		
		<style>
		table, th {
		    background-color: #aaa;
			padding: 3px 10px;
		}
		tbody {
		    background-color: #ddd;
		    height: 250px;
		    overflow: auto;
		}
		td {
		    padding: 3px 10px;
		}

		thead > tr, tbody{
		    display:block;}
		</style>
		<!--[if lte IE 8]><link rel="stylesheet" href="css/ie/v8.css" /><![endif]-->
	</head>
	<body class="homepage">

		<!-- Header -->
			<div id="header-wrapper">
				<header id="header" class="container">
				
					<!-- Logo -->
						<div id="logo">
							<h1>Quiz!</h1>
							<span>for Twilio Sales</span>
						</div>
					
					<!-- Nav -->
						<nav id="nav">
							<ul>
								<li><a href="results">Refresh Results</a></li>
								<li><a href="javascript:if (confirm('Are you sure you want to reset all responses?  Data will be deleted.'))  document.forms[0].submit();">Reset Responses</a></li>
							</ul>
						</nav>
						<div>Text responses to (253) 666-6678</div>
				</header>
			</div>
		
		<!-- Main -->
			<div id="main-wrapper">
				<div class="container">
					<% if @questions.empty? %>
					<h2>No SMS received yet</h2>
					<% end %>
					<% @questions.each do |q|%>
						<div id="<%= q.question %>">
							<%= render :partial => 'response', locals: {q: q}, :remote => true %>
						</div>
					<% end %>
				</div>
			</div>
			<form id="resetForm" action="/reset" method="POST"></form>

<script>
  $(document).ready(function(){
    setInterval(updateCharts,5000);
 });

  function updateCharts(){
	  
	  $.ajax({
	      url:"/question_count",  
	      success:function(data) {
			  if (data > <%= @questions.length %>){
				  document.location.reload();
			  }
	      }
	    });
		
	  <% @questions.each do |q|%>
		  $("#<%=q.question%>").load("<%=fetch_items_path(question: q.question)%>"); 
	  <% end %>
  }
  
</script>

	</body>
</html>