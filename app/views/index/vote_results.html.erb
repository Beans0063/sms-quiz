<html>
	<head>
		<title>Sales SMS Survey</title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		<!--[if lte IE 8]><script src="css/ie/html5shiv.js"></script><![endif]-->
		<script src="js/jquery.min.js"></script>
		<script src="js/jquery.dropotron.min.js"></script>
		<script src="js/skel.min.js"></script>
		<script src="js/skel-layers.min.js"></script>
		<script src="js/init.js"></script>
		<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
		<noscript>
			<link rel="stylesheet" href="css/skel.css" />
			<link rel="stylesheet" href="css/style.css" />
			<link rel="stylesheet" href="css/style-desktop.css" />
		</noscript>
		
		<style>
		table, th {
		    background-color: #aaa;
		}
		tbody {
		    background-color: #ddd;
		    height: 250px;
		    overflow: auto;
		}
		td {
		    padding: 3px 10px;
		}

		thead > tr, tbody{
		    display:block;}
		</style>
		<!--[if lte IE 8]><link rel="stylesheet" href="css/ie/v8.css" /><![endif]-->
	</head>
	<body class="homepage">

		<!-- Header -->
			<div id="header-wrapper">
				<header id="header" class="container">
				
					<!-- Logo -->
						<div id="logo">
							<h1>Vote!</h1>
							<span>by Twilio Sales</span>
						</div>
					
					<!-- Nav -->
						<nav id="nav">
							<ul>
								<li class="current"><a href="results">Refresh Results</a></li>
								<li><a href="javascript:if (confirm('Are you sure you want to reset all responses?'))  document.forms[0].submit();">Reset Responses</a></li>
							</ul>
						</nav>
					
				</header>
			</div>
		
		<!-- Main -->
			<div id="main-wrapper">
				<div class="container">
					<% if @questions.empty? %>
					<h2>No SMS received yet</h2>
					<% end %>
					<% @questions.each do |q|%>
					<div class="row">
						<div class="4u">
						
							<!-- Sidebar -->
								<div id="sidebar">
									<section class="widget thumbnails">
										<h3>Question <%= q.question %></h3>
										<%= column_chart Vote.where("question=?", q.question).group(:answer).count %>

									</section>
								</div>
						
						</div>
						<div class="8u important(collapse)">

							<!-- Content -->
								<div id="content">
									<section class="last">
										<h3><%= q.question %> Responses</h3>
										<p>
											<table>
										        <tr>
										            <th>Answer</th>
										            <th>From</th>
													<th>Date</th>
										        </tr>
												
											<% Vote.where("question=?", q.question).order(:id).each do |vote| %>
											<tr><td><%= vote.answer %></td><td><%= vote.from %></td><td><%= localize(vote.created_at, :format => :long) %></td></tr>
											<% end %>
										</table>
											
										</p>
									</section>
								</div>

						</div>
					</div>
					<% end %>
				</div>
			</div>
<form id="resetForm" action="/reset" method="POST"></form>
	</body>
</html>